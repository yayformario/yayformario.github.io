---
websiteTitle: yayformar.io
title: Main
layout: 'templates/homeTemplate.njk'
activePage: home

eleventyImport:
    collections: ["posts"]
---

<!-- Minimal Hero -->
<section class="homeIntro">
  <div>
    <h1 class="homeTitle">The Daily Deployment</h1>
    <p class="homeSubtitle">Just a a dude with a blog</p>
  </div>
</section>
<!-- Minimal Stats -->
<div class="minimalStats">
  <div class="minimalStat">
    <span class="statValue">{{ collections.posts.length }}</span>
    <span class="statLabel">Posts</span>
  </div>
</div>
<!-- Recent Posts -->
<section class="recent">
  <div class="recentHeader">
    <h2 class="sectionTitle">Recent Posts</h2>
    <a href="/blog/" class="viewAll">View all →</a>
  </div>

  <!-- Show latest 3 posts -->
  <div class="recentPostsList">
    {% for post in collections.posts | reverse %}
      {% if loop.index <= 3 %}
        <div class="postElement">
          <div class="postDate">{{ post.date | postDate }}</div>
          <a href="{{ post.url }}" class="postTitle">{{ post.data.title }}</a>
          <a href="{{ post.url }}" class="postArrow">→</a>
        </div>
      {% endif %}
    {% endfor %}
  </section>